page{
	width: 100%;
	height: 100%;
}
.main{
	width: 100%;
	height: 100%;
}
.main-box{
	width: 100%;
	height: 100%;
	align-items: center;
	background: #eee;
}
.ava-img{
	height: 36px;
	width: 36px;
	border: 1px solid #eee;
	border-radius: 50%;
	margin-right: 5px;
}
.top-box{
	align-items: center;
	padding-bottom: 4px;
	border-bottom: 1px solid #eee;
	margin-bottom: 5px;
}
.msg-box{
	width: 95%;
	border: 1px solid #eee;
	align-items: center;
	margin: 10px;
	border-radius: 10px;
	background: #fff;
}
.msg-box-item{
	width: 95%;
	margin: 10px;
	border-radius: 5px;
}
.bot-box{
	border-top:1px solid #eee ;
	margin-top: 5px;
}
.bot-img{
	width: 20px;
	height: 20px;
}
.like-btn{
	margin-top: 8px;
	margin-right: 50px;
	margin-left: 10px;
	
}
.img-content{
	display: flex;
	flex-direction: row;
	width: 100%;
	
}
.bot-add{
	position: fixed;
	bottom: 3%;
	right: 20px;
}